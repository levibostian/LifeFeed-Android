<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- the colors here are to theme material design elements https://developer.android.com/training/material/theme.html#StatusBar describes all the elements you can customize -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_darker</item>
        <item name="colorAccent">@color/accent</item> <!-- colors widgets such as button, edittext, checkbox colors -->
        <item name="android:windowBackground">@color/background</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="colorButtonNormal">@android:color/white</item>
        <item name="android:itemTextAppearance">@style/MenuTextAppearance</item>

        <item name="colorControlNormal">@android:color/white</item> <!-- colors bottom bar for edittexts -->
        <item name="android:textColorHint">@android:color/white</item> <!-- edittext hint text color -->

        <item name="colorControlHighlight">@color/primary_lighter</item> <!-- sets color ripple lollipop device and background color of selected state pre lollipop. Set for a lighter or darker shade then colorAccent color -->

        <item name="alertDialogTheme">@style/AlertDialogTheme</item>

        <item name="android:borderlessButtonStyle">@style/BorderlessButtonStyle</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="ToolbarStyle" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/white</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <!-- Roboto text font. This is the textview style we have set above in our themes `@style/RobotoTextViewStyle` so now all textviews in the app will use this font size and font family by default. -->
    <style name="TextViewStyle" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/regular_text_size</item>
        <item name="android:fontFamily">"sans-serif"</item>
        <!-- <item name="android:textColor">@color/accent</item> don't want because it changes snackbar textcolor to black -->
    </style>

    <style name="MenuTextAppearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BorderlessButtonStyle" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@android:color/black</item>
        <item name="colorButtonNormal">@color/primary</item>
    </style>

</resources>